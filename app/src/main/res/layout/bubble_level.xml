<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/Gradienter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/bubble_level_background"
            android:src="@drawable/tools_level_bg_circle_all"
            android:layout_width="wrap_content"
            android:layout_height="600dp"
            />

        <ImageView
            android:id="@+id/bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/tools_level_icon_circle" />
    </FrameLayout>


    <ImageButton
        android:id="@+id/On_off"
        android:scaleType="centerInside"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Gradienter"
        android:src="@drawable/tools_level_lock_off"
        android:background="@color/white"
        />
</RelativeLayout>