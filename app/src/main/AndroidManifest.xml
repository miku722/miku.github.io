<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.conversions">
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <permission android:name="android.permission.MANAGE_DOCUMENTS"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Conversions">
        <activity android:name=".activity.UnitConverter"
            android:parentActivityName=".activity.Intro"
            android:windowSoftInputMode="stateVisible|adjustResize"
            >
        </activity>

        <activity android:name=".activity.Intro"
            android:theme="@style/Theme.Design.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.DecibelMeter">
        </activity>
        <activity android:name=".activity.BubbleLevel">
        </activity>
        <activity android:name=".activity.Compass">

        </activity>
    </application>

</manifest>